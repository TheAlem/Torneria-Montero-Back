{
  "compilerOptions": {
    "target": "ES2022",

    "module": "node20",
    "moduleResolution": "node16",

    "outDir": "dist",
    "rootDir": "src",

    "lib": ["ES2022"],

    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
