{
  "openapi": "3.0.3",
  "info": {
    "title": "Tornería Montero API",
    "version": "1.0.0",
    "description": "API para gestionar trabajos, clientes y trabajadores de Tornería Montero. Autenticación por header x-api-key."
  },
  "servers": [
    { "url": "/", "description": "Local server" }
  ],
  "tags": [
    { "name": "Auth", "description": "Autenticación y gestión de usuarios" },
    { "name": "Clientes", "description": "Gestión de clientes" },
    { "name": "Pedidos", "description": "Gestión de pedidos y trabajos" },
    { "name": "Trabajadores", "description": "Gestión de trabajadores" },
    { "name": "Asignaciones", "description": "Gestión de asignaciones de trabajos" },
    { "name": "Reportes", "description": "Generación y gestión de reportes" },
    { "name": "Kanban", "description": "Operaciones para el tablero Kanban" }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key",
        "description": "Legacy API key header (x-api-key). BearerAuth (JWT) is preferred."
      }
    },
    "schemas": {
      "AuthRegisterRequest": {
        "type": "object",
        "required": ["email", "password", "nombre"],
        "properties": {
          "email": { "type": "string", "format": "email", "description": "Correo electrónico del usuario" },
          "password": { "type": "string", "description": "Contraseña del usuario" },
          "role": { 
            "type": "string", 
            "enum": ["ADMIN", "TORNERO", "CLIENTE"], 
            "default": "CLIENTE",
            "description": "Rol del usuario. Si es CLIENTE, se creará automáticamente un registro en la tabla clientes"
          },
          "nombre": { "type": "string", "description": "Nombre completo del usuario" },
          "ci_rut": { 
            "type": "string", 
            "description": "Cédula o RUT del cliente. Requerido si role es CLIENTE" 
          },
          "telefono": { 
            "type": "string", 
            "description": "Teléfono de contacto. Requerido si role es CLIENTE" 
          },
          "direccion": { 
            "type": "string", 
            "description": "Dirección del cliente. Requerido si role es CLIENTE" 
          }
        }
      },
      "AuthLoginRequest": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": { "type": "string", "format": "email" },
          "password": { "type": "string" }
        }
      },
      "AuthProfile": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "email": { "type": "string", "format": "email" },
          "role": { "type": "string", "enum": ["ADMIN", "TORNERO", "CLIENTE"] }
        }
      },
      "AuthResponse": {
        "type": "object",
        "properties": {
          "token": { "type": "string" },
          "profile": { "$ref": "#/components/schemas/AuthProfile" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      },
      "UnifiedError": {
        "type": "object",
        "properties": {
          "code": { "type": "string", "example": "VALIDATION_ERROR" },
          "message": { "type": "string", "example": "Mensaje de error legible" }
        }
      },
      "UnifiedSuccess": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "success" },
          "data": { "type": ["object", "array", "null"], "description": "Payload de respuesta" },
          "error": { "$ref": "#/components/schemas/UnifiedError", "nullable": true }
        }
      },
      "AuthResponseWrapper": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "success" },
          "data": { "$ref": "#/components/schemas/AuthResponse" },
          "error": { "$ref": "#/components/schemas/UnifiedError", "nullable": true }
        }
      },
      "PedidoResponseWrapper": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "success" },
          "data": { "$ref": "#/components/schemas/PedidoResponse" },
          "error": { "$ref": "#/components/schemas/UnifiedError", "nullable": true }
        }
      },
      "ClientListResponseWrapper": {
        "type": "object",
        "properties": {
          "status": { "type": "string", "example": "success" },
          "data": { "type": "array", "items": { "$ref": "#/components/schemas/Client" } },
          "error": { "$ref": "#/components/schemas/UnifiedError", "nullable": true }
        }
      },
      "ClientAppAccount": {
        "type": "object",
        "properties": {
          "appEmail": { "type": "string", "format": "email" },
          "appPhone": { "type": "string" }
        }
      },
      "Client": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "ci_rut": { "type": "string" },
          "email": { "type": "string", "format": "email" },
          "telefono": { "type": "string" },
          "direccion": { "type": "string" },
          "estado": { "type": "string" },
          "fecha_registro": { "type": "string", "format": "date-time" }
        }
      },
      "Worker": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "ci": { "type": "string" },
          "rol_tecnico": { "type": "string" },
          "estado": { "type": "string" },
          "usuario_id": { "type": "integer" }
        }
      },
      "PedidoCreate": {
        "type": "object",
        "required": ["descripcion", "cliente_id"],
        "properties": {
          "descripcion": { 
            "type": "string",
            "description": "Descripción detallada del pedido"
          },
          "prioridad": { 
            "type": "string", 
            "enum": ["BAJA", "MEDIA", "ALTA"], 
            "default": "MEDIA",
            "description": "Prioridad del pedido"
          },
          "cliente_id": { 
            "type": "integer",
            "description": "ID del cliente que realiza el pedido"
          },
          "responsable_id": { 
            "type": ["integer", "null"],
            "description": "ID del trabajador asignado al pedido (opcional)"
          },
          "fecha_estimada_fin": { 
            "type": "string", 
            "format": "date",
            "description": "Fecha estimada de finalización (YYYY-MM-DD)"
          },
          "precio": { 
            "type": ["number", "string"], 
            "description": "Precio del trabajo"
          },
          "notas": {
            "type": "string",
            "description": "Notas adicionales sobre el trabajo (opcional)"
          },
          "tiempo_estimado_sec": {
            "type": "integer",
            "description": "Tiempo estimado en segundos (opcional)"
          },
          "adjuntos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Lista de URLs o identificadores de archivos adjuntos (opcional)"
          }
        }
      },
      "PedidoResponse": {
        "type": "object",
        "properties": {
          "id": { 
            "type": "integer",
            "description": "ID único del pedido" 
          },
          "cliente_id": {
            "type": "integer",
            "description": "ID del cliente que realizó el pedido"
          },
          "descripcion": { 
            "type": "string",
            "description": "Descripción detallada del pedido"
          },
          "prioridad": { 
            "type": "string", 
            "enum": ["BAJA", "MEDIA", "ALTA"],
            "description": "Nivel de prioridad del pedido"
          },
          "precio": { 
            "type": "string",
            "description": "Precio del trabajo"
          },
          "fecha_inicio": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de inicio del trabajo"
          },
          "fecha_estimada_fin": { 
            "type": "string", 
            "format": "date-time",
            "description": "Fecha y hora estimada de finalización"
          },
          "estado": { 
            "type": "string", 
            "enum": ["PENDIENTE", "ASIGNADO", "EN_PROGRESO", "QA", "ENTREGADO"],
            "description": "Estado actual del pedido"
          },
          "responsable_id": { 
            "type": ["integer", "null"],
            "description": "ID del trabajador asignado (si existe)"
          },
          "semaforo": {
            "type": "string",
            "enum": ["VERDE", "AMARILLO", "ROJO"],
            "description": "Estado del semáforo para seguimiento"
          },
          "notas": {
            "type": ["string", "null"],
            "description": "Notas adicionales sobre el trabajo"
          },
          "adjuntos": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Lista de archivos adjuntos"
          },
          "tiempo_estimado_sec": {
            "type": ["integer", "null"],
            "description": "Tiempo estimado en segundos"
          },
          "tiempo_real_sec": {
            "type": ["integer", "null"],
            "description": "Tiempo real empleado en segundos"
          },
          "creado_por_id": {
            "type": ["integer", "null"],
            "description": "ID del usuario que creó el pedido"
          },
          "actualizado_por_id": {
            "type": ["integer", "null"],
            "description": "ID del último usuario que actualizó el pedido"
          },
          "fecha_actualizacion": {
            "type": "string",
            "format": "date-time",
            "description": "Fecha y hora de la última actualización"
          },
          "eliminado": {
            "type": "boolean",
            "description": "Indica si el pedido ha sido marcado como eliminado"
          }
        },
        "required": ["id", "cliente_id", "descripcion", "prioridad", "estado", "fecha_actualizacion"]
      },
      "KanbanCardClient": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "nombre": { "type": "string" },
          "telefono": { "type": "string" }
        }
      },
      "KanbanCardWorker": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "usuario_id": { "type": "integer" },
          "rol_tecnico": { "type": "string" }
        }
      },
      "KanbanCard": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "descripcion": { "type": "string" },
          "prioridad": { "type": "string", "enum": ["BAJA", "MEDIA", "ALTA"] },
          "estado": { "type": "string", "enum": ["PENDIENTE", "ASIGNADO", "EN_PROGRESO", "QA", "ENTREGADO"] },
          "fecha_estimada_fin": { "type": "string", "format": "date-time" },
          "fecha_actualizacion": { "type": "string", "format": "date-time" },
          "cliente": { "$ref": "#/components/schemas/KanbanCardClient" },
          "responsable": { "$ref": "#/components/schemas/KanbanCardWorker" }
        }
      },
      "KanbanColumns": {
        "type": "object",
        "properties": {
          "columns": {
            "type": "object",
            "properties": {
              "PENDIENTE": { "type": "array", "items": { "$ref": "#/components/schemas/KanbanCard" } },
              "EN_PROGRESO": { "type": "array", "items": { "$ref": "#/components/schemas/KanbanCard" } },
              "TERMINADO": { "type": "array", "items": { "$ref": "#/components/schemas/KanbanCard" } },
              "ENTREGADO": { "type": "array", "items": { "$ref": "#/components/schemas/KanbanCard" } }
            },
            "additionalProperties": false
          }
        }
      },
      "ChangeStatusRequest": {
        "type": "object",
        "required": ["newStatus"],
        "properties": {
          "newStatus": { "type": "string", "enum": ["PENDIENTE", "ASIGNADO", "EN_PROGRESO", "QA", "ENTREGADO"] },
          "note": { "type": "string" },
          "userId": { "type": "integer" }
        }
      }
    }
  },
  "security": [{ "ApiKeyAuth": [] }],
  "paths": {
    "/api/jobs": {
      "get": {
        "tags": ["Pedidos"],
        "summary": "Listar trabajos (compatibilidad)",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de trabajos",
            "content": {
              "application/json": {
                "schema": { "type": "array", "items": { "$ref": "#/components/schemas/PedidoResponse" } }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Pedidos"],
        "summary": "Crear trabajo (compatibilidad)",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PedidoCreate" } } }
        },
        "responses": {
          "201": { "description": "Creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/PedidoResponse" } } } }
        }
      }
    },
    "/api/jobs/workers": {
      "get": {
        "tags": ["Trabajadores"],
        "summary": "Listar trabajadores (desde jobs)",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Worker" } } } } }
        }
      }
    },
    "/api/asignar": {
      "post": {
        "tags": ["Asignaciones"],
        "summary": "Asignar un trabajo a un trabajador",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["pedido_id","trabajador_id"],
                "properties": {
                  "pedido_id": { "type": "integer" },
                  "trabajador_id": { "type": "integer" },
                  "origen": { "type": "string", "enum": ["MANUAL","SUGERIDO"] }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Asignación creada", "content": { "application/json": { "schema": { "type": "object", "properties": { "ok": { "type": "boolean" } } } } } }
        }
      },
      "get": {
        "tags": ["Asignaciones"],
        "summary": "Listar asignaciones",
        "security": [{ "BearerAuth": [] }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "type": "array", "items": { "type": "object" } } } } } }
      }
    },
    "/api/pedidos": {
      "post": {
        "tags": ["Jobs"],
        "summary": "Crear un nuevo pedido",
        "description": "Crea un nuevo pedido en el sistema. Requiere autenticación mediante token JWT.",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": { 
              "schema": { "$ref": "#/components/schemas/PedidoCreate" },
              "example": {
                "descripcion": "Torneado de pieza específica",
                "prioridad": "MEDIA",
                "cliente_id": 1,
                "responsable_id": 2,
                "fecha_estimada_fin": "2025-10-30",
                "precio": 250.50
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Pedido creado exitosamente",
            "content": {
              "application/json": { 
                "schema": { "$ref": "#/components/schemas/PedidoResponseWrapper" }
              }
            }
          },
          "400": { 
            "description": "Error de validación",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "El campo descripcion es obligatorio"
                    }
                  }
                }
              }
            }
          },
          "401": { 
            "description": "No autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "No token provided"
                    }
                  }
                }
              }
            }
          },
          "404": { 
            "description": "Cliente o trabajador no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Cliente con ID 1 no encontrado"
                    }
                  }
                }
              }
            }
          },
          "500": { 
            "description": "Error del servidor",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "Error interno del servidor"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": ["Jobs"],
        "summary": "Listar todos los pedidos",
        "description": "Obtiene una lista de todos los pedidos en el sistema. Requiere autenticación mediante token JWT.",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de pedidos obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/PedidoResponse"
                  }
                }
              }
            }
          },
          "401": {
            "description": "No autenticado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "example": "No token provided"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/trabajadores": {
      "get": {
        "tags": ["Trabajadores"],
        "summary": "Listar trabajadores activos",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Worker" } } }
            }
          }
        }
      },
      "post": {
        "tags": ["Trabajadores"],
        "summary": "Crear un trabajador",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["ci","usuario_id"],
                "properties": {
                  "ci": { "type": "string" },
                  "rol_tecnico": { "type": "string" },
                  "usuario_id": { "type": "integer" },
                  "direccion": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Trabajador creado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } } }
        }
      }
    },
    "/api/trabajadores/{id}": {
      "get": {
        "tags": ["Trabajadores"],
        "summary": "Obtener trabajador por ID",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "OK", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } } }, "404": { "description": "Not found" } }
      },
      "put": {
        "tags": ["Trabajadores"],
        "summary": "Actualizar trabajador",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "type": "object", "properties": { "rol_tecnico": { "type": "string" }, "estado": { "type": "string" } } } } } },
        "responses": { "200": { "description": "Actualizado", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Worker" } } } }, "404": { "description": "Not found" } }
      },
      "delete": {
        "tags": ["Trabajadores"],
        "summary": "Eliminar trabajador",
        "security": [{ "BearerAuth": [] }],
        "parameters": [{ "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }],
        "responses": { "200": { "description": "Eliminado", "content": { "application/json": { "schema": { "type": "object", "properties": { "message": { "type": "string" } } } } } }, "404": { "description": "Not found" } }
      }
    },
    "/api/pedidos/{id}": {
      "get": {
        "tags": ["Jobs"],
        "summary": "Obtener pedido por id",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": { "schema": { "$ref": "#/components/schemas/PedidoResponse" } }
            }
          },
          "401": { "description": "Missing/invalid API key" },
          "404": { "description": "Not found" }
        }
      }
    },
    "/api/clientes": {
      "get": {
        "tags": ["Clientes"],
        "summary": "Listar todos los clientes",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          { 
            "name": "query", 
            "in": "query", 
            "required": false, 
            "schema": { "type": "string" },
            "description": "Término de búsqueda opcional para filtrar clientes"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ClientListResponseWrapper" }
              }
            }
          },
          "401": { 
            "description": "No autenticado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Clientes"],
        "summary": "Crear un nuevo cliente",
        "security": [{ "BearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["nombre", "ci_rut"],
                "properties": {
                  "nombre": {
                    "type": "string",
                    "description": "Nombre completo del cliente"
                  },
                  "ci_rut": {
                    "type": "string",
                    "description": "Cédula o RUT del cliente"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "description": "Correo electrónico del cliente"
                  },
                  "telefono": {
                    "type": "string",
                    "description": "Número de teléfono del cliente"
                  },
                  "direccion": {
                    "type": "string",
                    "description": "Dirección del cliente"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente creado exitosamente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Client" }
              }
            }
          },
          "400": {
            "description": "Datos inválidos",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "No autenticado",
            "content": {
              "application/json": {
